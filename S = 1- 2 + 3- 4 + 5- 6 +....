/*   Sum of the first n terms:
       S = 1- 2 + 3- 4 + 5- 6 +.... */

#include <stdio.h>
int main()
{
  int n, i, s = 0;
  printf("Input the nth term: ");
  scanf("%d", &n);
  for (i = 1; i <= n; i++)
    {
        if (i % 2 == 0)
            s += i / 2;
        else
            s += (i + 1) / 2;
    }
 printf("Sum = %d", s);
 return 1;
}
